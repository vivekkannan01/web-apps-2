<h1>New Post</h1>

<form action="/posts" method="post">
  <%# add form fields %>
 
 <p>
    <label for="author_input">Author</label>
    <input type="text" name="author" id="author_input">
  </p>

 <p>
    <label for="image_url">Image URL</label>
    <input type="text" name="image" id="image_url">
  </p>

  <p>
    <label for="body_input">Body</label>
    <input type="text" name="body" id="body_input">
  </p>

  <button>Submit</button>
</form>
